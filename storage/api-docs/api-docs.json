                    "example": "5.00000000"
                },
                "frozen_shares": {
                    "description": "\u51bb\u7ed3\u80a1\u7968\u6570",
                    "type": "string",
                    "example": "3.00000000"
                },
                "available_shares": {
                    "description": "\u53ef\u7528\u80a1\u7968\u6570",
                    "type": "string",
                    "example": "2.00000000"
                }
            },
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/CreatedAtUpdatedAt"
                }
            ]
